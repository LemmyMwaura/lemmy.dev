---
import ItemLayout from '../../layouts/ItemLayout.astro';

interface Props {
  faq: {
    question: string
    answer: string
  }
}

const { faq } = Astro.props
---

<ItemLayout gap="0.3rem" cursor="normal">
  <div class="qstn">{faq.question}</div>
  <div class="ans">{faq.answer}</div>
</ItemLayout>

<style>
  .qstn {
    font-size: 1.2rem;
    color: #4d9355;
  }
  .ans {
    font-size: 1rem;
  }
</style>
