---
import ItemLayout from "../../layouts/ItemLayout.astro";
import { modifyDate } from "../../lib/helpers";

interface Props {
  post: any
}

const { post } = Astro.props
---

<section>
  <ItemLayout gap="0.8rem" cursor="pointer">
    <div class="post">
      <h3>{post.frontmatter.title}</h3>
      <p>{post.frontmatter.excerpt}</p>
      <div class="post-footer">
        <a href={`/blog/${post.frontmatter.slug}`} class="link">Read More</a>
        <p>{modifyDate(post.frontmatter.date)}</p>
      </div>
    </div>
  </ItemLayout>
</section>

<style>
  .post {
    display: grid;
    gap: 0.8rem;
    grid-template-rows:auto;
  }
  .post-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .link {
    padding: 5px;
    border-radius: 0.2rem;
    background-color:  #282828;
    text-decoration: none;
    color: #e2b714;
  }
</style>
