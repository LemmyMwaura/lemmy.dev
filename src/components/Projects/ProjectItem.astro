---
import ItemLayout from "../../layouts/ItemLayout.astro";
import type { projectProps } from "../../models/project.model";

interface Props {
  proj : projectProps
}

const { proj } = Astro.props
---

<ItemLayout gap="0.8rem" cursor="normal">
  <div class="name">{proj.name}</div>
  <div class="desc-wrapper">
    <span class="desc">{proj.description}</span>
    <span class="cat">{proj.category}</span>
  </div>
  <div class="stats-wrapper">
    {proj.stats.map((stat) => (
      <span class="stat"> - {stat}</span>
    ))}
  </div>
  <div class="links">
    <a 
      class={proj.liveLink && "link"}
      href={proj.liveLink} target="_blank">{proj.liveLink && "Open"}
    </a>
    <a class="link" href={proj.githubLink} target="_blank">Github</a>
  </div>
</ItemLayout>

<style>
  .name {
    color:#4d9355;
  }
  .cat{
    color: #e2b714;
  }
  .stats-wrapper {
    margin-top: 0.8rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .links {
    display: flex;
    gap: 0.3rem;
  }
  .link {
    padding: 5px;
    border-radius: 0.2rem;
    background-color:  #282828;
    text-decoration: none;
    color: #e2b714;
  }
</style>
