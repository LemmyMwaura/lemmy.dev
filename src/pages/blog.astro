---
import Layout from "../layouts/Layout.astro";
import Blog from "../components/Blog/Blog.astro";
const posts = await Astro.glob('../mdx/*.mdx')
---

<Layout title="Blog | Lemmy Mwaura">
  <!-- blogs -->
  <section class="blogs">
    {posts.map(post => (
      <div class="container">
        <Blog post={post}/>
      </div>
    ))}
  </section>
</Layout>

<style>
  .blogs {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-top: 3rem;
  }
</style>
